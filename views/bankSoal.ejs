<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Randomize Question</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: #ae9a7b" class="text-white">
    <h2 class="pt-4 d-flex justify-content-center text-white font-weight-bold">
      Bank Soal
    </h2>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container mt-3">
        <a href="/" class="btn btn-success mt-2 mb-4">Kembali</a>
        <!-- Navbar Items -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a
                class="nav-link text-white btn btn-dark font-weight-bold ml-2"
                aria-current="page"
                href="/addItem"
                >Buat Soal</a
              >
            </li>
            &nbsp;&nbsp;
            <li class="nav-item">
              <a
                class="nav-link text-white btn btn-dark font-weight-bold ml-2"
                aria-current="page"
                href="/randomItems"
                >Buat Kuis/Ujian</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <hr />
    <div class="container">
      <div class="table-responsive">
        <table class="table text-white">
          <thead>
            <tr>
              <th>Kategori Soal</th>
              <th>Soal</th>
              <th>Tingkat Kesulitan</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(function(item) { %>
            <tr>
              <td><%= item.nama_kategori %></td>
              <td><%= item.soal %></td>
              <td>
                <% if (item.tingkat_kesulitan === 'Mudah') { %>
                <span
                  style="
                    background-color: green;
                    color: white;
                    padding: 5px;
                    border-radius: 3px;
                  "
                >
                  <%= item.tingkat_kesulitan %>
                </span>
                <% } else if (item.tingkat_kesulitan === 'Sulit') { %>
                <span
                  style="
                    background-color: red;
                    color: white;
                    padding: 5px;
                    border-radius: 3px;
                  "
                >
                  <%= item.tingkat_kesulitan %>
                </span>
                <% } else { %> <%= item.tingkat_kesulitan %> <% } %>
              </td>
              <td>
                <a
                  href="/editItem/<%= item.id %>"
                  class="btn btn-warning text-white btn-sm mr-2"
                  >Edit</a
                >
                <a
                  href="/deleteItem/<%= item.id %>"
                  class="btn btn-danger btn-sm"
                  >Delete</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
